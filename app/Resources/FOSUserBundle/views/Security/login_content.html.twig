{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="row">

        <div class="col s6"><img src="{{ asset('bundles/platform/img/Logo_Insead.png') }}" alt="INSEAD" class="responsive-img"></div>
        <div class="col s6"><img src="{{ asset('bundles/platform/img/Logo_Insead.png') }}" alt="INSEAD" class="responsive-img"></div>

    </div>
    <div class="row">
        <form class="" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="center-align" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="center-align" type="password" id="password" name="_password" required="required" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

            <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
    <div class="row">
        <div class="card-panel blue-grey">
            <p class="center-align">Be known or be shown</p>
        </div>
    </div>
</div>
