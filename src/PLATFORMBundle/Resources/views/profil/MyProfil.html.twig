{% extends '@PLATFORM/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col s6">
                <div class="col s12 center">
                    <img src="{{ asset('bundles/platform/img/' ~ app.user.file.filename) }}" alt="image"  class="circle responsive-img">
                </div>
                <div class="col s12 center">
                    <a class="btn" href="{{ path('my_profil_image', {id:app.user.file.id}) }}">Edit <i class="material-icons">edit</i></a>

                </div>
            </div>
            <div class="col s6">
                <div class="card-panel grey darken-3 white-text z-depth-1">
                    <ul>
                        <li>first: {{ app.user.firstName }}</li>
                        <li>last: {{ app.user.lastName }}</li>
                        <li>Company : {{ app.user.company }}</li>
                        <li>Position : {{ app.user.position }}</li>
                        <li>Insead : {{ app.user.insead }}</li>
                    </ul>
                    <a class="btn" href="{{ path('user_edit', {id: app.user.id } ) }}">Edit <i class="material-icons">edit</i></a>
                </div>
                <div class="card-panel grey darken-3 white-text z-depth-1">

                    <a href="#"> Calendar</a>
                    <p>Hobbies</p>
                    <p>#Coffee</p>
                    <p>#Tennis</p>
                    <p>#Climbing</p>
                    <a class="btn" href="#">Edit <i class="material-icons">edit</i></a>
                </div>
            </div>
        </div>
    </div>


{%  endblock %}