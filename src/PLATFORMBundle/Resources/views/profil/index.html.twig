{% extends '@PLATFORM/layout.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row grey darken-4">
            <div class="center white-text">
            <h1>Get a match</h1>
            </div>
            <div id="index">
                <form action="{{ path('search_profil') }}" >
                    <div class="input-field col s6">
                        <input id="location" type="text" class="validate">
                        <label for="location">Location</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="2017:03:06" id="date" type="date" class="datepicker ">
                        <label for="date"></label>
                    </div>
                    <div class="input-field col s6" id="time-demo">
                        <input placeholder="00:00" type="text">
                        <label class="active" for="time_demo"></label>
                    </div>
                    <div class="input-field col s6" id="time-demo2">
                        <input placeholder="00:00" type="text">
                        <label class="active" for="time_demo2"></label>
                    </div>

                    <div class="input-field col s12 autocomplete">
                        <input type="text" id="autocomplete-input" >
                        <label for="autocomplete-input">Activity</label>
                    </div>

                    <div class="input-field col s12 center">
                        <input type="submit" value="search" class="btn btn-primary "/>
                    </div>
                </form>

            </div>
        </div>
    </div>


{%  endblock %}